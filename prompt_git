function dpp_is_repo {
  git rev-parse --is-inside-work-tree > /dev/null 2>&1
}

function dpp_repo_icon {
  dpp_cecho "Â±" black
}

function dpp_branch_name {
  dpp_cecho $(git rev-parse --abbrev-ref HEAD 2> /dev/null) white
}

function dpp_check_status {
  git dpp_status 2>/dev/null | grep "$1" > /dev/null 2>&1
}

function dpp_untracked_files {
  if dpp_check_status "Untracked files:"; then
    dpp_cecho "untracked" red
  fi
}

function dpp_new_files {
  if dpp_check_status "new file:"; then
    dpp_cecho "new" green
  fi
}

function dpp_modified_files {
  if dpp_check_status "modified:"; then
    dpp_cecho "modified" blue
  fi
}

function dpp_prompt_git {
  if dpp_is_repo; then
    # this is git repo :-)
    echo "$(dpp_repo_icon)$(dpp_branch_name)$(dpp_untracked_files)$(dpp_new_files)$(dpp_modified_files) "
  fi
}
